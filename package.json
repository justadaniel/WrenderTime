{
    "name": "WrenderTime",
    "productName": "Wrender Time",
    "version": "0.0.1",
    "description": "A small utility app for video editors.",
    "author": "Daniel Christmas",
    "copyright": "Copyright Â© 2020, Daniel Christmas, All Rights Reserved.",
    "main": "./app/main.js",
    "scripts": {
        "start": "electron .",
        "pack": "electron-builder --dir",
        "postinstall": "electron-builder install-app-deps",
        "build": "electron-builder -mwl",
        "build:win": "electron-builder --win",
        "build:mac": "electron-builder --mac",
        "publish": "electron-builder -mwl -p always",
        "publish:win": "electron-builder --win -p always",
        "publish:mac": "electron-builder --mac -p always"
    },
    "repository": "https://github.com/justadaniel/WrenderTime/",
    "keywords": [
        "Electron",
        "Adobe",
        "Premiere Pro"
    ],
    "dependencies": {
        "auto-launch": "^5.0.5",
        "chokidar": "^3.4.0",
        "electron-context-menu": "^2.0.1",
        "electron-is-dev": "^1.2.0",
        "electron-store": "^5.2.0",
        "electron-sudo": "^4.0.12",
        "electron-updater": "^4.3.1",
        "electron-util": "^0.14.2",
        "got": "^11.4.0",
        "menubar": "^9.0.1"
    },
    "devDependencies": {
        "electron": "^9.0.5",
        "electron-builder": "^22.7.0"
    },
    "build": {
        "files": [
            "app/**/*",
            "node_modules/**/*",
            "package.json"
        ],
        "directories": {
            "buildResources": "resources"
        },
        "appId": "com.justadaniel.wrendertime",
        "publish": {
            "provider": "github",
            "repo": "WrenderTime",
            "owner": "justadaniel",
            "host": "github.com",
            "protocol": "https",
            "releaseType": "draft",
            "private": true
        },
        "dmg": {
            "contents": [
                {
                    "x": 410,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 130,
                    "y": 150,
                    "type": "file"
                }
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "mac": {
            "category": "public.app-category.developer-tools",
            "icon": "build/mac/icon.icns",
            "darkModeSupport": true,
            "identity": null
        },
        "win": {
            "icon": "build/win/icon.ico",
            "target": [
                "nsis",
                "portable"
            ]
        }
    }
}
