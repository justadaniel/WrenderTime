{
    "name": "WrenderTime",
    "productName": "WrenderTime",
    "version": "0.0.2-2",
    "description": "A small utility app for video editors.",
    "author": "Daniel Christmas",
    "copyright": "Copyright Â© 2020, Daniel Christmas, All Rights Reserved.",
    "main": "./app/main.js",
    "scripts": {
        "start": "electron .",
        "pack": "electron-builder --dir",
        "postinstall": "electron-builder install-app-deps",
        "build": "electron-builder -mw",
        "build:win": "electron-builder --win",
        "build:mac": "electron-builder --mac",
        "publish": "electron-builder -mw -p always",
        "publish:win": "electron-builder --win -p always",
        "publish:mac": "electron-builder --mac -p always",
        "release": "build"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/justadaniel/WrenderTime.git"
    },
    "keywords": [
        "Electron",
        "Adobe",
        "Premiere Pro"
    ],
    "dependencies": {
        "auto-launch": "^5.0.5",
        "chokidar": "^3.4.1",
        "electron-context-menu": "^2.2.0",
        "electron-is-dev": "^1.2.0",
        "electron-log": "^4.2.2",
        "electron-settings": "^4.0.2",
        "electron-store": "^5.2.0",
        "electron-sudo": "^4.0.12",
        "electron-updater": "^4.3.4",
        "electron-util": "^0.14.2",
        "got": "^11.5.1",
        "menubar": "^9.0.1"
    },
    "devDependencies": {
        "electron": "^9.1.1",
        "electron-builder": "^22.8.0"
    },
    "build": {
        "appId": "com.justadaniel.wrendertime",
        "files": [
            "app/**/*",
            "node_modules/**/*",
            "package.json"
        ],
        "directories": {
            "buildResources": "build"
        },
        "publish": {
            "provider": "github",
            "vPrefixedTagName": "true",
            "releaseType": "draft",
            "publishAutoUpdate": "true"
        },
        "dmg": {
            "contents": [
                {
                    "x": 410,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 130,
                    "y": 150,
                    "type": "file"
                }
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": false
        },
        "mac": {
            "category": "public.app-category.developer-tools",
            "icon": "build/mac/icon.icns",
            "darkModeSupport": true,
            "identity": null
        },
        "win": {
            "icon": "build/win/icon.ico",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                }
            ]
        }
    }
}